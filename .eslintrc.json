{
    "env": {
        "browser": true,
        "jest/globals": true,
        "jquery": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "standard", "standard-react"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "jest",
        "react",
        "react-hooks"
    ],
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error", "log", "info"] }],
        "no-mixed-spaces-and-tabs": ["error"],
        "no-unused-vars": ["error"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
